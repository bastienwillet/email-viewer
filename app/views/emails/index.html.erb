<!-- Navbar -->
<nav class="navbar">
    <div class="navbar-left">
        <div><a href="/" target="_blank">
            <%= image_tag "email.png", class: "navbar-logo" %>
        </div><div>
            <h1 class="navbar-title">AutoMailer</h1>
        </div></a>
    </div>
</nav>

<div class="email-box">
    <!-- Liste de mails -->
    <div class="email-list">
        <h3>Boîte de réception</h3>
        <ul>
            <% @emails.each do |email|  %>
                <% if email.read == false %>
                    <li id="email-<%= email.id %>" class="email-read"><%= link_to email.object, email_path(email), method: :get, remote: true %></li>
                <% else %>
                    <li id="email-<%= email.id %>"><%= link_to email.object, email_path(email), method: :get, remote: true %></li>
                <% end %>
            <% end %>
        </ul>
    </div>

    <!-- Fenêtre de visualisation -->
    <div class="email-show" id="show">
    </div>
</div>

<!-- Formulaire -->
<div class="form-box">
    <h3 class="form-title">Ecris toi un e-mail !</h3>
    <%= form_with(model: @email) do |f| %>
        <div class="form-fields-box">
            <%= f.text_field :object, placeholder:"Objet", class:"form-field" %>
            <%= f.text_area :body, placeholder:"Contenu", class:"form-field form-field-area" %>
            <%= f.submit "Envoyer", class:"form-button" %>
        </div>
    <% end %>
</div>
